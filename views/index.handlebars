
<div class="container">

  <div class="row center-align">
    <div class="col s12">
      <img class="responsive-img center-align goodBurgerLogo" src="/assets/img/gdbrg.jpg" alt="good burger logo">
    </div>
  </div>

  <div class="row center-align">
    <div class="col s12 m6 flow-text">
      <h4 class="center-align">Pret-a-Manger</h4>
      <ul class=''>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s12 m6 flow-text">
      <h4>Nom Nom Nom!</h4>
      <ul class=''>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row center-align">
    <div class="col s12 flow-text">
      <h3>Place Your Order</h3>
      <form class="create-form">

        <div class="form-group ">
          <label for="burgerName">Welcome to Good Burger, home of the Good Burger, can I take your order?</label>
          <input type="text" id="burgerName" name="name">
        </div>

        <button id="submitBtn" class="submitBtn" type="submit">Place Order</button>
      </form>
    </div>
  </div>



</div>
